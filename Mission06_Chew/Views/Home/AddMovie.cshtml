@model Application

<h2>Add Movie</h2>
@* <form asp-action="AddMovie" method="post"> *@
<form method="post">
        <input type="hidden" asp-for="MovieID" />

    <div class="form-group">
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.CategoryName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Title">Title *</label>
        <input asp-for="Title" class="form-control" required>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year *</label>
        <input asp-for="Year" class="form-control" type="number" min="1888" required>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Director">Director</label>
        <input asp-for="Director" class="form-control">
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating">Rating *</label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Edited">Edited *</label>
        <select asp-for="Edited" class="form-control" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" class="form-control">
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CopiedToPlex">Copied to Plex *</label>
        <select asp-for="CopiedToPlex" class="form-control" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" class="form-control" maxlength="25">
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
